<h2>Results index</h2>
<!--books一覧 -->
<table>
　<% if @model == 'book' %>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @datas.each do |book| %>
     <tr>
      <td>
       <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      </td>
      <td><%=book.title%> 
      </td>
      <td><%= book.body %></td>
     </tr>
     <% end %>
  </tbody>
  
    <% else %>
      <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </tr>
       </thead>
   <tbody>
    <% @datas.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>